<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.androidhive.musicplayer"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk android:minSdkVersion="16" />

    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
        android:icon="@drawable/ic_launcher3"
        android:label="@string/app_name" >
        <activity
            android:name="com.aPlayer.musicplayer.MainActivity"
            android:configChanges="keyboardHidden|orientation"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name="com.aPlayer.musicplayer.PlayListActivity" />
        <activity android:name="com.aPlayer.musicplayer.CustomPlaylist" />
        <activity
            android:name="com.aPlayer.musicplayer.SelectSongs"
            android:label="@string/title_activity_select_songs" >
        </activity>
        <activity
            android:name="com.aPlayer.musicplayer.CustomArtist"
            android:label="@string/title_activity_custom_artist" >
        </activity>
    </application>

</manifest> <!-- AndroidBuildingMusicPlayerActivity -->

